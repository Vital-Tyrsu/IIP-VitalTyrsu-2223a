<Window x:Class="WpfSequenceGame.game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSequenceGame"
        mc:Ignorable="d"
        Title="game" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblRound" Content="Actual round: " HorizontalAlignment="Left" Margin="123,90,0,0" VerticalAlignment="Top" Width="370"/>
        <Label x:Name="lblNaam" Content="Welkom !!" HorizontalAlignment="Left" Margin="274,28,0,0" VerticalAlignment="Top" Width="330" FontSize="24"/>
        <Button x:Name="btnAnswer" Content="Answer" HorizontalAlignment="Left" Margin="274,356,0,0" VerticalAlignment="Top" Height="35" Width="89" Click="btnAnswer_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="665,356,0,0" VerticalAlignment="Top" Height="36" Width="93" Click="btnStop_Click"/>
        <Label Content="Your Answer: " HorizontalAlignment="Left" Margin="123,265,0,0" VerticalAlignment="Top" Width="88" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.367"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="TxtAnswer" HorizontalAlignment="Left" Margin="214,271,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="628,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="90" Width="103"><Run Language="nl-be" Text="Possible Answer:             "/><LineBreak/><Run Language="nl-be" Text="-&gt; 1 : hond                    -&gt; 2 : koe                        -&gt; 3: kuiken                    -&gt; 4: paard"/><LineBreak/><Run Language="nl-be"/><LineBreak/><Run Language="nl-be"/></TextBlock>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="665,297,0,0" VerticalAlignment="Top" Width="87" Height="35" Click="btnStart_Click"/>
        <Label x:Name="lblAntwoorden" Content="Label" HorizontalAlignment="Left" Margin="183,198,0,0" VerticalAlignment="Top" Width="217"/>
        <Label x:Name="lblCheck" Content="Please enter your answer " HorizontalAlignment="Left" Margin="10,306,0,0" VerticalAlignment="Top" Width="324"/>


    </Grid>
</Window>
