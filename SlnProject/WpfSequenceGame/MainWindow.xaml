        <Label Content="Naam: " HorizontalAlignment="Left" Margin="50,30,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox x:Name="TxtNaam"  HorizontalAlignment="Left" Margin="153,30,0,0" VerticalAlignment="Top" Width="342" Height="40"/>
        <TextBox x:Name="TxtRounds"  HorizontalAlignment="Left" Margin="153,75,0,0" VerticalAlignment="Top" Width="342" Height="38"/>
        <Label Content="Rounds" HorizontalAlignment="Left" Margin="50,75,0,0" VerticalAlignment="Top" Height="26" Width="75"/>
        <TextBox x:Name="TxtSequencePattern" HorizontalAlignment="Left" Margin="50,149,0,0" VerticalAlignment="Top" Width="350" Height="24"/>
        


    </Grid>
</Window>
