<Window x:Class="WpfProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProgressBar"
        mc:Ignorable="d"
        Title="WpfProgressBar" Height="450" Width="800">
    <Grid>
        <Label Content="Voortgang:" HorizontalAlignment="Left" Margin="48,194,0,0" VerticalAlignment="Top" Width="104"/>
        <Button x:Name="btnStart" Content="START" HorizontalAlignment="Left" Margin="196,241,0,0" VerticalAlignment="Top" Width="94" Click="BtnStart_Click"/>
        <Button x:Name="btnAnnuleren" Content="ANNULEREN" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" Width="94" Click="BtnAnnuleren_Click"/>
        <Label x:Name="lblProgress" HorizontalAlignment="Left" Margin="516,192,0,0" VerticalAlignment="Top" Height="28" Width="78"/>
        <Rectangle x:Name="rctProgressBar" HorizontalAlignment="Left" Height="24" Margin="177,194,0,0" Stroke="Black" VerticalAlignment="Top" MaxWidth="300"/>

    </Grid>
</Window>
