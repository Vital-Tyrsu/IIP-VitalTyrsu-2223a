<Window x:Class="WpfRaden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRaden"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Raad een getal tussen 1 en 10" HorizontalAlignment="Left" Margin="235,104,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="Jouw gok: " HorizontalAlignment="Left" Margin="235,140,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtGok" HorizontalAlignment="Left" Margin="352,144,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnGok" Content="CONTROLEER" HorizontalAlignment="Left" Margin="352,186,0,0" VerticalAlignment="Top" Height="31" Width="116" Click="btnGok_Click"/>
        <Label x:Name="lblAntwoord" Foreground="Blue" HorizontalAlignment="Left" Margin="235,275,0,0" VerticalAlignment="Top" Height="30" Width="237"/>
        <Button x:Name="btnOpnieuw" Content="OPNIEUW" HorizontalAlignment="Left" Margin="210,186,0,0" VerticalAlignment="Top" Height="31" Width="116" Click="btnOpnieuw_Click"/>

    </Grid>
</Window>
