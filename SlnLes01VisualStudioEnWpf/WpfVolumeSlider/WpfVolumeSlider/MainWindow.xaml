<Window x:Class="WpfVolumeSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVolumeSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="800" Background="#FF79D2E5">
    <Grid>
        <Label x:Name="lblVolume" HorizontalAlignment="Left" Height="30" Margin="308,130,0,0" VerticalAlignment="Top" Width="136"/>
        <Slider x:Name="sld1" HorizontalAlignment="Left" Margin="151,0,0,0" VerticalAlignment="Center" Width="533" Maximum="100" Minimum="0" IsSnapToTickEnabled="True" TickFrequency="5" ValueChanged="sld1_ValueChanged"/>

    </Grid>
</Window>
