<Window x:Class="WpfChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChat"
        mc:Ignorable="d"
        Title="WpfChat" Height="450" Width="800">
    <Grid Background="#FFB9EAF7">
        <Label x:Name="lblName" Content="Naam:" HorizontalAlignment="Left" Margin="41,99,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblBericht" Content="Bericht:" HorizontalAlignment="Left" Margin="41,177,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxBName" HorizontalAlignment="Left" Margin="95,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Height="35" RenderTransformOrigin="0.499,0.523"/>
        <TextBox x:Name="TxBBericht" HorizontalAlignment="Left" Margin="95,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Height="126" RenderTransformOrigin="0.499,0.523"/>
        <TextBlock x:Name="TxtBlock" HorizontalAlignment="Left" Margin="489,77,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="288" Width="268" Background="White"/>
        <Button x:Name="btnVerzenden" Content="VERZENDEN" HorizontalAlignment="Left" Margin="229,335,0,0" VerticalAlignment="Top" Height="26" Width="101" Click="btnVerzenden_Click"/>

    </Grid>
</Window>
